@{
    ViewData["Title"] = "Home Page";
}
@{
    Layout = "_LayoutAdmin";
}

<main>
<div class="text-center">

    <!-- Hero Section -->
    <div class="jumbotron jumbotron-fluid text-white text-center p-4 mt-4" style="background-color: #ff6f61;">
        <div class="container p-4">
            <h1 class="display-4">Welcome to Wardrobe Bliss</h1>
            <p class="lead">Discover the latest trends in fashion at unbeatable prices.</p>
        </div>
    </div>

    <!-- Product Categories -->
    <div class="container py-5">
        <h2 class="text-center mb-4 text-primary">Shop by Category</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Category 1">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Men's Clothing</h5>
                        <a href="#" class="btn btn-danger">Shop Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Category 2">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Women's Clothing</h5>
                        <a href="#" class="btn btn-danger">Shop Now</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300x200" class="card-img-top" alt="Category 3">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Unisex</h5>
                        <a href="#" class="btn btn-danger">Shop Now</a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Featured Products -->
    <div class="container py-5">
        <h2 class="text-center mb-4 text-primary">Featured Products</h2>
        <div class="row text-center">
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300x300" class="card-img-top" alt="Product 1">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Product 1</h5>
                        <p class="card-text">$29.99</p>
                        <a href="#" class="btn btn-danger">Add to Cart</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300x300" class="card-img-top" alt="Product 2">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Product 2</h5>
                        <p class="card-text">$49.99</p>
                        <a href="#" class="btn btn-danger">Add to Cart</a>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card border-0 shadow-sm">
                    <img src="https://via.placeholder.com/300x300" class="card-img-top" alt="Product 3">
                    <div class="card-body">
                        <h5 class="card-title text-primary">Product 3</h5>
                        <p class="card-text">$39.99</p>
                        <a href="#" class="btn btn-danger">Add to Cart</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
</main>