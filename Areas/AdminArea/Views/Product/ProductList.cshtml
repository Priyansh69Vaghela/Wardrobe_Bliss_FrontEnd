@using Wardrobe_Bliss.Areas.AdminArea.Models
@{
    Layout = "_LayoutAdmin";
}
@addTagHelper *, Microsoft.AspNetCore.Mvc.TagHelpers
@model IEnumerable<ProductModel>
<main id="main" class="main">
    <section class="section">
        <div class="row">
            <div class="col-lg-12">

                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Datatables</h5>
                        <a asp-controller="Product" asp-action="AddProduct">
                            <button type="submit" class="btn btn-primary mb-3">Add Product</button>
                        </a>
                        <!-- Table with stripped rows -->
                        <table class="table">
                            <thead>
                                <tr>
                                    <th>ProductID</th>
                                    <th>ProductName</th>
                                    <th>ProductPrice</th>
                                    <th>ProductCode</th>
                                    <th>Description</th>
                                    <th>UserID</th>
                                    <th>Action</th>
                                </tr>
                            </thead>
                            <tbody>
                                @foreach (var product in Model)
                                {
                                    <tr>
                                        <td>@product.product_id</td>
                                        <td>@product.name</td>
                                        <td>@product.price</td>
                                        <td>@product.description</td>
                                        <td>@product.stock_quantity</td>
                                        <td>@product.category_id</td>
                                        <td class="d-flex justify-content-start">
                                            <a asp-controller="Product" asp-action="AddProduct" asp-route-id="@product.product_id">
                                                <button type="button" class="btn btn-warning me-2">Edit</button>
                                            </a>
                                            <a asp-controller="Product" asp-action="ApiProductDelete" asp-route-id="@product.product_id"><button type="button" class="btn btn-danger me-2">Delete</button></a>
                                        </td>
                                    </tr>
                                }
                            </tbody>
                        </table>
                        <!-- End Table with stripped rows -->
                    </div>
                </div>

            </div>
        </div>
    </section>
</main>
